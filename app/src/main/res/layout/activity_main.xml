<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.tcc.laura.sistemamatricula.frontend.MainActivity">

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dimBackgroundColor"
        android:elevation="2dp"
        android:visibility="gone"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:background="@drawable/rounded_corners"
            android:indeterminate="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center">

        <TextView
            android:id="@+id/TitleText"
            android:textSize="35dp"
            android:textColor="#000000"
            android:fontFamily="@font/lato_bold"
            android:fontWeight="1000"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistema AcadÃªmico" />

        <ImageView
            android:id="@+id/academyLogo"
            android:paddingTop="15dp"
            android:layout_below="@+id/TitleText"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/image" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_marginTop="350dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="center">

        <EditText
            android:id="@+id/editText_login_username"

            android:layout_width="283dp"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawableStart="@drawable/ic_mail_outline_black_24dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginEnd="65dp"
            android:layout_marginRight="65dp"
            android:ems="10"
            android:hint="CPF"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editText_login_password"
            android:layout_width="285dp"
            android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
            android:drawableStart="@drawable/ic_lock_outline_black_24dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_login_username"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:layout_marginEnd="65dp"
            android:layout_marginRight="65dp"
            android:ems="10"
            android:hint="Senha"
            android:inputType="textPassword" />
        <TextView
            android:id="@+id/textView2"
            android:layout_below="@+id/editText_login_password"
            android:fontFamily="@font/lato_bold"
            android:fontWeight="1000"
            android:gravity="left"
            android:textColor="#000000"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Esqueci minha senha" />

        <TextView
            android:id="@+id/textView3"
            android:layout_below="@+id/editText_login_password"
            android:fontFamily="@font/lato_bold"
            android:fontWeight="1000"
            android:gravity="right"
            android:textColor="#000000"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fazer cadastro"/>

        <Button
            android:id="@+id/button_login_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_login_password"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="39dp"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="39dp"
            android:layout_marginRight="39dp"
            android:text="Entrar" />

    </RelativeLayout>

</RelativeLayout>

